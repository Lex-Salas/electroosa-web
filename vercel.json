{
  "version": 2,
  "framework": "vite",
  "builds": [
    { "src": "vite.config.js", "use": "@vercel/static-build", "config": {} },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
